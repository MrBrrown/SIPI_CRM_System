@page
@model SIPI_CRM_System.Pages.MainPageModel
@{
    @if (Request.Query["isadmin"] == "True")
        Layout = "~/Pages/Shared/_AdminLayout.cshtml";
    else
        Layout = "~/Pages/Shared/_EmployeeLayout.cshtml";
}

<section class="gradient-color">
    <div class="d-grid">
        <!--New Order Buttton-->
        <button class="btn btn-primary text-light new-order-button"
                type="button"
                data-bs-toggle="offcanvas"
                data-bs-target="#offcanvasNewOrder"
                aria-controls="offcanvasNewOrder">
            Новый заказ
        </button>
        <!--Offcanvas right-->
        <div class="offcanvas offcanvas-end new-order-offcanvas" tabindex="-1" id="offcanvasNewOrder" aria-labelledby="offcanvasNewOrderLabel">
            <div class="offcanvas-header text-light">
                <h5 class="offcanvas-title" id="offcanvasNewOrder">Новый заказ</h5>
                <button type="button" class="btn-close" data-bs-dismiss="offcanvas" aria-label="Close"></button>
            </div>
            <div class="offcanvas-body small">
                <form asp-page-handler="create" method="post">
                    <input class="form-control" type="date" name="Date" />
                    <input class="form-control" type="time" name="Time" />
                    <button type="submit" class="btn-primary">Создать</button>
                </form>
            </div>
        </div>

        <!--Daily Orders Cards-->
        @if (Model.dailyOrders.Any())
        {
            @foreach (var item in Model.dailyOrders.ToList())
            {
                var cardId = "card-" + item.Id.ToString();

                <div class="card m-2 @cardId">
                    <!--Card color-->
                    @if (item.IsReserved)
                    {
                        <style type="text/css">
                        .@cardId {
                            background-color: red;
                        }
                        </style>
                    }
                    else if (item.IsDone)
                    {
                        <style type="text/css">
                        .@cardId {
                            background-color: green;
                            pointer-events: none;
                        }
                        </style>
                    }
                    else
                    {
                        <style type="text/css">
                        .@cardId {
                            background-color: yellow;
                        }
                        </style>
                    }
                    <!--Card header-->
                    <div class="card-header d-flex justify-content-between align-items-center">
                        <h5>@item.OrderDateTime.ToShortDateString() @item.OrderDateTime.ToShortTimeString()</h5>
                        <form asp-page-handler="SetOrderDone" asp-route-id="@item.Id" method="post">
                            <button type="submit" class="btn btn-success">Заказ выполенен</button>
                        </form>
                    </div>
                    <!--Card body-->
                    <div class="card-body">
                        @foreach (var dish_order in item.DailyOrderDishes.ToList())
                        {
                                <ul>
                                    <li>
                                        @Model.dishes.First(x => x.Id == dish_order.DishId).Name
                                    </li>
                                </ul>
                        }
                    </div>
                </div>
            }
        }
    </div>
</section>