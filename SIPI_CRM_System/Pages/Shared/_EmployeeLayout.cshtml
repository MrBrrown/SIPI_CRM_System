<!DOCTYPE html>

<html>
<head>
    <meta charset="utf-8" />
    <meta name="viewport" content="width=device-width, initial-scale=1.0" />
    <title>@ViewData["Title"] - SIPI_CRM_System</title>
    <link rel="stylesheet" href="~/css/bootstrap.css" />
    <link rel="stylesheet" href="~/lib/bootstrap/dist/css/bootstrap.min.css" />
    <link rel="stylesheet" href="~/css/site.css" asp-append-version="true" />
    <link rel="stylesheet" href="~/SIPI_CRM_System.styles.css" asp-append-version="true" />
</head>
<body>
    <nav class="sticky-top py-4 py-lg-7 bg-dark">
        <div class="d-none d-lg-block">
            <div class="container text-lg-center bg-transparent text-white">
                <div class="row justify-content-between align-items-center">
                    <div class="col-2 col-xxl-1 row">
                        <button class="btn btn-sm btn-Orange2 text-light menu-button">Menu</button>
                    </div>
                    <div class="text-center col-8 row">
                        <h2 class="text-light">CRM System</h2>
                    </div>
                    <div class="col-2 col-xxl-1 row">
                        <form asp-page-handler="exit" method="post">
                            <button class="btn btn-sm btn-dark exit-button">Exit</button>
                        </form>
                    </div>
                </div>
            </div>
        </div>
    </nav>
    <!-- Navigation 9 -->
    <div>
        @RenderBody()
    </div>
</body>
</html>

